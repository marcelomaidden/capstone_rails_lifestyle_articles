<!DOCTYPE html>
<html>
  <head>
    <title>LifestyleArticle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = 'd-flex p-4 bg-light sticky-top'>
      <nav class = 'd-flex col-12'>
        <div class = 'col-8'>
          Logo
        </div>
        <div class = 'd-flex col justify-content-end'>
          <% if session[:current_user].nil? %>
            <div class = 'col font-weight-bold'><%= link_to  "LOG-IN", login_path %></div>
          <% else %>
            <div class = 'col font-weight-bold'>
              <%= session[:current_user]['name'] if session[:current_user] %>   
            </div>
            <div class = 'col font-weight-bold'>
              <%= link_to  "LOG-OUT", logout_path %>
            </div>
          <% end %>
          <div class = 'col font-weight-bold'><%= link_to  "REGISTER", new_user_path %></div>
        </div>
      </nav>
    </header>
    <% flash.each do |type, msg| %>
      <div class = 'p-3 mb-2 bg-warning text-dark d-flex justify-content-center'>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
